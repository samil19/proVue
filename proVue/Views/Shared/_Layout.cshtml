                    </li>
                    <li class="nav-item" v-bind:class="{ active: isActive }">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")" v-on:click="active=isActive">Contacto</a>
                    </li>
                </ul>
                
            </div>
        </div>
    </nav>

